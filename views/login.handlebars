<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST" class="ms-3 me-3">
        <div class="form-group mt-2">
          <label for="email" style="font-size: 1.5em;">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}">
        </div>
        <div class="form-group mt-3">
          <label for="password" style="font-size: 1.5em;">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <div class=" mt-3">
          <button type="submit" class="btn btn-primary btn-block">Login</button>
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook</a>
        </div>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </form>
    </div>
  </div>
</div>